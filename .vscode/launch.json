{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "cppdbg",
      "request": "launch",
      "name": "Debug main.cpp (choose output exe)",
      "program": "${workspaceFolder}/main.exe",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "preLaunchTask": "C/C++: g++.exe build active file",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
    }
  ],
  "inputs": [
    {
      "id": "executableName",
      "type": "promptString",
      "description": "Enter the name of the executable to debug (e.g., main)"
    }
  ]
}